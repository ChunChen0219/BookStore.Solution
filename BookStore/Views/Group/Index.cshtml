@model IEnumerable<BookStore.Models.EFModels.GroupPermission>

@{
    ViewBag.Title = "群组權限列表";
}

<h2>@ViewBag.Title</h2>
<p>
    @Html.ActionLink("創建新群組", "Create")
</p>
<table class="table">
    <thead>

        <tr>
            <th>群组ID</th>
            <th>群组名稱</th>
            <th>操作</th>

        </tr>

    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GroupName)
                </td>
                <td>
                    @Html.ActionLink("編輯", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("詳情", "Details", new { id = item.Id }) |
                    @Html.ActionLink("删除", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>


