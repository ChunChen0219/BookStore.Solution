@model IEnumerable<BookStore.Models.ViewModels.KeywordIndexVm>

@{
    ViewBag.Title = "Index";
}

<h2>關鍵詞</h2>

<p>
    @Html.ActionLink("新增", "Create", null, new { @class = "btn btn-success" })

</p>

<form method="get" style="margin-bottom:10px">
    關鍵詞名稱: @Html.TextBox("name", null, new { @class = "ms-1 form-control-inline me-2" })
    <input type="submit" value="搜尋" class="btn btn-sm btn-primary" />
</form>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("編輯", "Edit", new { id = item.Id }, new { @class = "btn btn-sm btn-success" })                
                @*@Html.ActionLink("Details", "Details", new { id=item.Id }) |*@
            </td>
        </tr>
    }

</table>
